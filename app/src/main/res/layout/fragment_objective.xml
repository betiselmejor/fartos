        android:id="@+id/objectiveP1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="110dp"
        />

    <TextView
        android:id="@+id/deadp1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEAD"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/PN1text"
        android:layout_marginLeft="120dp"
        android:layout_marginBottom="-30dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/nameP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:layout_alignEnd="@+id/objectiveP1"
        android:layout_alignTop="@+id/objectiveP1"
        android:layout_marginEnd="-50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pos:"
        android:layout_alignEnd="@+id/objectiveP1"
        android:layout_alignBottom="@+id/objectiveP1"
        android:layout_marginEnd="-40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/posP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignEnd="@+id/objectiveP1"
        android:layout_alignBottom="@+id/objectiveP1"
        android:layout_marginEnd="-60dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/PN1text"
        android:layout_width="100dp"
        android:maxWidth="100dp"
        android:layout_height="wrap_content"
        android:text="PlayerName"
        android:layout_alignEnd="@+id/nameP1"
        android:layout_alignTop="@+id/nameP1"
        android:layout_marginEnd="-110dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

